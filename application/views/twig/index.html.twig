{% extends 'templates/template.html.twig' %}

{% block content %}
  <h1>Login</h1>
  <p>Please login with your email/username and password below.</p>
  {{ title }}

  <div id="infoMessage">{{ message }}</div>

  {{ form_open("auth/login")|raw }}

  <p>
    <label for="identity">Email/Username:</label>
    {{ form_input( identity )|raw }}
  </p>

  <p>
    <label for="password">Password:</label>
    {{ form_input( password )|raw }}
  </p>

  <p>
    <label for="remember">Remember Me:</label>
    {{ form_checkbox('remember', '1', FALSE, 'id="remember"')|raw }}
  </p>


  <p>{{ form_submit('submit', 'Login', 'class="btn btn-primary"')|raw }}</p>

  {{ form_close()|raw }}

  <p><a href="/testtwig/forgot_password">Forgot your password?</a></p>
{% endblock %}
<?php

// --------------------------------------------------------------
// Launch the CI Code Generator.
// --------------------------------------------------------------
require 'application' . DIRECTORY_SEPARATOR . 'libraries' . DIRECTORY_SEPARATOR . 'CI_Code_Generate' . DIRECTORY_SEPARATOR . 'CI_Code_Generate.php';

try
{
	$generate = new CI_Code_Generate();
	$generate->run(array_slice($argv, 1));
}
catch (\Exception $e)
{
	echo $e->getMessage();
}

echo PHP_EOL;